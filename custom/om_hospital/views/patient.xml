<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"></field>
                <field name="gender"></field>
                <field name="age"></field>
                <field name="note"></field>
                <field name="state"></field>
            </tree>
        </field>
    </record>


    <record id="view_patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button  id="button_confirm" name="action_confirm" string="Confirm" class="btn-primary"
                             states="draft"
                             type="object"/>
                    <button  id="button_done" name="action_done" string="Mark as Done" class="btn-primary"
                             states="confirm"
                             type="object"/>
                    <button  id="button_draft" name="action_draft" string="Set to  Draft" class="btn-primary"
                             states="cancel"
                             type="object"/>
                    <button  id="button_cancel" name="action_cancel" string="Cancel"
                             states="draft,done,confirm"
                             type="object"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done"/>

                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"></field>
                            <field name="age"></field>
                        </group>
                        <group>
                            <field name="gender" required="1"></field>
                            <field name="note"></field>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_patient_kanban" model="ir.ui.view">
        <field name="name">hospital.patient.kanban</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"></field>
                <field name="name"></field>
                <field name="gender"></field>
                <field name="age"></field>
                <field name="note"></field>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li>
                                        Name :
                                        <field name="name"></field>
                                    </li>
                                    <li>
                                        Gender :
                                        <field name="gender"></field>
                                    </li>
                                    <li>
                                        Age :
                                        <field name="age"></field>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_patient_search" model="ir.ui.view">
        <field name="name">hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search string="Patients">
                <field name="name"/>
                <field name="note"/>
                <separator/>

                <filter string="Male" name="male" domain="[('gender', '=', 'male')]"/>
                <filter string="Female" name="female" domain="[('gender', '=', 'female')]"/>
                <filter string="Above 60" name="age" domain="[('age', '>', 60)]"/>
                <group expand="1" string="Group By">
                    <filter string="Patient Name" name='name' context="{'group_by':'name'}"/>
                    <filter string="Gender" name='gender' context="{'group_by':'gender'}"/>
                </group>
            </search>
        </field>
    </record>


    <record id="patient_action" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new patient data!
            </p>
            <p>
            </p>
        </field>
    </record>

    <menuitem id="hospital_root" name="Hospital" sequence="10"/>

    <menuitem id="hospital_patient_root" name="Patients" parent="hospital_root" sequence="10"/>

    <menuitem id="hospital_patient" name="Patients" parent="hospital_patient_root" action="patient_action"
              sequence="10"/>
</odoo>